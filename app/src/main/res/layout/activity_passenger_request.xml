<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/hapcolor">

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/source"
            android:text="source"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_to"
            android:id="@+id/to"/>

        <com.cadrac.mylibrary.SearchableSpinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:gravity="center"
            android:id="@+id/destination"
        android:backgroundTint="@color/white"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:visibility="gone"
            android:id="@+id/rupee"
            android:src="@drawable/rupee"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/fare"
            android:text="fare"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"

        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle type  :"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:id="@+id/vehicletypetxt"/>
        <com.cadrac.mylibrary.SearchableSpinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:gravity="center"
android:backgroundTint="@color/white"
            android:id="@+id/vehicletype"></com.cadrac.mylibrary.SearchableSpinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:text="Seats  :"
            android:id="@+id/seatstxt"/>
        <com.cadrac.mylibrary.SearchableSpinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="20dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:id="@+id/seats"></com.cadrac.mylibrary.SearchableSpinner>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:id="@+id/book"
            android:text="BOOK"
            android:textColor="@color/white"
            android:background="@color/hapcolor"/>

    </LinearLayout>

</LinearLayout>